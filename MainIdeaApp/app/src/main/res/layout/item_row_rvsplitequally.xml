<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/usericon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/userimage"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:fontFamily="serif"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:text="Q"
        />

    <TextView
        android:id="@+id/tvsplitForwhomName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/usericon"
        android:layout_margin="12dp"
        android:layout_alignTop="@id/usericon"
        android:textSize="20sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/tvSplitForWhomAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvsplitForwhomName"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="96dp"
        android:layout_toEndOf="@id/tvsplitForwhomName"
        android:gravity="end"
        android:textColor="#000000"
        android:textSize="20sp" />


</RelativeLayout>