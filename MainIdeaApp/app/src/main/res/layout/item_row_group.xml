<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:cardView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/itemGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardView:cardBackgroundColor="#ffffff"
        cardView:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/Group_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/userimage"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="32sp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textAllCaps="true"
                />

            <TextView
                android:id="@+id/Group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Group_icon"
                android:layout_marginStart="32dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#000000"
                android:fontFamily="casual"
                />
            <TextView
                android:id="@+id/Group_Balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Group_icon"
                android:layout_below="@id/Group_name"
                android:layout_marginStart="32dp"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="casual"
                />
            <TextView
                android:id="@+id/Group_createDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/Group_icon"
                android:layout_below="@id/Group_Balance"
                android:layout_marginStart="32dp"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="casual"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>