<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eventCardView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:id="@+id/btnEqualSplit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#3D5AFE"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:text="SPLIT EQUALLY" />
        <Button
            android:id="@+id/btnAmountSplit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#3D5AFE"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="SPLIT BY AMOUNT" />
        <Button
            android:id="@+id/btnWeightSplit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#3D5AFE"
            android:padding="8dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:text="SPLIT BY WEIGHT" />

    </LinearLayout>
</android.support.v7.widget.CardView>