<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Enter Member Name"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:textColor="#000000"
        android:fontFamily="serif"
        />

    <TextView
        android:id="@+id/tv_memberimage"
        android:layout_below="@+id/enter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/userimage"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="32sp"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textAllCaps="true"
        />


    <EditText

        android:id="@+id/etMemberName"
        android:layout_toEndOf="@id/tv_memberimage"
        android:layout_alignBaseline="@id/tv_memberimage"
        android:layout_below="@id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:ems="12"
        android:textStyle="normal"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textAlignment="textStart"
        />

</RelativeLayout>